generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/monsaas"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  role   Role?   @relation(fields: [roleId], references: [id])
  roleId Int?
}

